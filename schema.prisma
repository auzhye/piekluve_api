generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rating {
  id        Int     @id @default(autoincrement())
  rating    Int     
  authorId  Int
  User      User    @relation(fields: [authorId], references: [id]) 
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  token    String? @db.Text()
  Rating   Rating[]
}