generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model rating {
  id        Int     @id @default(autoincrement())
  rating    Int     
  authorId  Int
  user      user    @relation(fields: [authorId], references: [id]) 
}

model user {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  token    String? @db.Text()
  rating   rating[]
}